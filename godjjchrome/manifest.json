{
    "manifest_version": 2,
    "name": "GodJJ Now",
    "description": "是一款真正的JJ套件",
    "version": "2.3.1",
    "permissions": [
        "alarms",
        "storage",
        "notifications",
        "webNavigation",
        "*://*.twitch.tv/*",
        "*://*.op.gg/",
        "https://lol.moa.tw/",
        "https://docs.google.com/*"
    ],
    "options_ui":
    {
        "page": "options.html",
        "chrome_style": true
    },
    "content_scripts": [
        {
          "matches": ["*://*.twitch.tv/*"],
          "js": ["/js/arrive.js", "/js/points-clicker.js"],
          "run_at" : "document_idle"
        }
    ],
    "background":
    {
        "page": "background.html",
        "persistent": true
    },
    "browser_action":
    {
        "default_title": "點我查詢GodJJ",
        "default_icon": "/img/sleep.png",
        "default_popup": "popup.html"
    },
    "icons":
    {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}